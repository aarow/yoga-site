.formInput {
  -webkit-appearance: none;
  width: 100%;
  max-width: 100%;
  padding: 1.25em;
  margin: 0;
  font-size: 1rem;
  transition: all var(--transition-duration);
  cursor: pointer;
  font-family: var(--font-family-sans);
  font-weight: 600;
  color: var(--color-black);
  background: var(--color-white);
  border: 1px solid var(--color-black, #000);
  border-radius: 0;
}
